# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /assslavik        controllers.AssslavikController.assslavikGet
POST    /assslavik        controllers.AssslavikController.assslavikPost

GET     /transaction/history            controllers.TransactionController.history
GET     /transaction/:transactionId     controllers.TransactionController.showTransactionDetails(transactionId : Integer)
GET     /credit                         controllers.TransactionController.creditGet
POST    /credit                         controllers.TransactionController.creditPost
GET     /debit                          controllers.TransactionController.debitGet
POST    /debit                          controllers.TransactionController.debitPost
